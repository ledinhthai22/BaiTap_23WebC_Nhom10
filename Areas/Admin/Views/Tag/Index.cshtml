@model List<BaiTap_23WebC_Nhom10.Models.Tag>

@{
    Layout = "_Layout";
}

@section Title {
        Danh sách thẻ
}

<div class="row mb-3 align-items-center">
    <div class="col-md-6 text-end">
        <a asp-area="Admin" asp-controller="Tag" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Thêm thẻ
        </a>
    </div>
</div>
<br />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Chưa có thẻ nào trong hệ thống.</div>
}
else
{
    <table class="table table-bordered table-striped text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên Thẻ</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model)
            {
                <tr>
                    <td>@tag.Id</td>
                    <td>@tag.TagName</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-danger"><i class="bi bi-pencil-square"></i>Xóa</a>
                        <a href="#" class="btn btn-sm btn-warning"><i class="bi bi-trash"></i>Sửa</a>
                    </td>
                </tr>
                
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation"> <ul class="pagination justify-content-center" id="pagination"> <!-- Nút phân trang sẽ load ở đây --> </ul> </nav>
}


@section js {
    <script>
        $(document).ready(function () {
            const pageSize = 10;
            let currentPage = 1;

            const $rows = $('table tbody tr');
            const totalPages = Math.ceil($rows.length / pageSize);

            function renderTable() {
                $rows.hide();
                const start = (currentPage - 1) * pageSize;
                $rows.slice(start, start + pageSize).show();
            }

            function renderPagination() {
                let html = '';
                for (let i = 1; i <= totalPages; i++) {
                    html += `<li class="page-item ${i === currentPage ? 'active' : ''}">
                                <a class="page-link" href="#">${i}</a>
                             </li>`;
                }
                $('#pagination').html(html);

                $('#pagination .page-link').click(function (e) {
                    e.preventDefault();
                    currentPage = parseInt($(this).text());
                    renderTable();
                    renderPagination();
                });
            }

            renderTable();
            renderPagination();
        });
    </script>
}
