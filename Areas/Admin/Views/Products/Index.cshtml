@model List<BaiTap_23WebC_Nhom10.Models.Product>
@using System.Globalization
@{
    Layout = "_Layout";
}

@section Title {
        Danh sách sản phẩm
}

<div class="row mb-3 align-items-center">
    <div class="col-md-6 text-end">
        <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Thêm sản phẩm
        </a>
    </div>
</div>
<br />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Chưa có tag nào trong hệ thống.</div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Giảm giá</th>
                <th>Danh mục</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.ProductName</td>
                    <td>@string.Format(new CultureInfo("vi-VN"), "{0:C0}", p.Price)</td>
                    <td>@p.Discount %</td>
                    <td>@p.Category?.CategoryName</td>
                    <td>
                        @(p.Status ? "Hiển thị" : "Ẩn")
                    </td>
                    <td>

                        <a href="#" class="btn btn-danger btn-sm">Xóa</a>
                        <a href="#" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="#" class="btn btn-sm btn-primary"><i class="bi bi-trash"></i>Xem Chi tiết</a>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation"> <ul class="pagination justify-content-center" id="pagination"> 
        <!-- Nút phân trang sẽ load ở đây --> 
    </ul> </nav>
}


@section js {
    <script>
        $(document).ready(function () {
            const pageSize = 8;
            let currentPage = 1;

            const $rows = $('table tbody tr');
            const totalPages = Math.ceil($rows.length / pageSize);

            function renderTable() {
                $rows.hide();
                const start = (currentPage - 1) * pageSize;
                $rows.slice(start, start + pageSize).show();
            }

            function renderPagination() {
                let html = '';
                for (let i = 1; i <= totalPages; i++) {
                    html += `<li class="page-item ${i === currentPage ? 'active' : ''}">
                                <a class="page-link" href="#">${i}</a>
                             </li>`;
                }
                $('#pagination').html(html);

                $('#pagination .page-link').click(function (e) {
                    e.preventDefault();
                    currentPage = parseInt($(this).text());
                    renderTable();
                    renderPagination();
                });
            }

            renderTable();
            renderPagination();
        });
    </script>
}