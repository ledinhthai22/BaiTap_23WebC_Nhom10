@section title {
        Login
}

<div class="container" style="height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div class="panel panel-default" style="max-width: 400px; width: 100%;">
        <div class="panel-body">
            <div class="text-center">
                <h3 class="mt-2">Welcome Back</h3>
                <p class="text-muted">Please login to your account</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }

            <form method="post" asp-controller="Login" asp-action="Index" asp-route-reUrl="@ViewData["ReturnUrl"]">
                <div class="form-group">
                    <label>User Name</label>
                    <input type="text" class="form-control" id="userName" name="UserName" placeholder="Enter user name" required />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" id="passWord" name="PassWord" placeholder="Enter password" required />
                </div>

                <div class="checkbox" style="display: flex; justify-content: space-between; align-items: center;">
                    <label>
                        <input type="checkbox" name="RememberMe" /> Remember me
                    </label>
                    <a href="#" class="small text-muted">Forgot password?</a>
                </div>

                <!-- Add a hidden field for Name to satisfy the Required attribute -->
                <input type="hidden" name="Name" value="LoginUser" />

                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>

            <div class="text-center" style="margin-top: 15px;">
                <p class="text-muted small">
                    Don't have an account?
                    <a asp-controller="Register" asp-action="Index">Sign up</a>
                </p>
            </div>
        </div>
    </div>
</div>